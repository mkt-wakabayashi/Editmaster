.post
  .post__header
    .container 
      = link_to image_tag('Edit Master.png',size: "140x60"), root_path
    .post__header__search
      %input.form-control{placeholder: "キーワードを入力",type: "text",action: "#",method: :get}
      %span.input-group-btn
        %button.btn.btn-default{type: "submit"}
          %i.glyphicon.glyphicon-search
    .post__header__list
      = link_to '/users/show' do
        %button.btn.btn-primary{type: "button"} マイページ
  .post-content
  = form_for @article, method: :post do |f|
    .post-content__title
      = f.text_field :title, class: "form-control",placeholder: "タイトル", required: ""
    .post-content__tag
      = f.text_field :tag_list, value: @article.tag_list.join(','),"data-role": "tagsinput", class: "form-control",placeholder: "タグ"
    .post-content__text
      = f.text_area :text, class: "form-control",placeholder: "内容", required: ""
    .post-content__footer
      =f.submit "投稿する", class: "btn btn-info"
      
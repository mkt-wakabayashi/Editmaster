.article-content
  - if user_signed_in?
    .article-content__header
      .container 
        = link_to image_tag('Edit Master.png',size: "140x60"), root_path
      .article-content__header__search
        = search_form_for @search, url: search_articles_path do |form|
          = form.text_field :title_cont, placeholder: "記事を検索する", class: "form-control"
          %span.input-group-btn
            %button.btn.btn-default{type: "form.submit"}
              %i.glyphicon.glyphicon-search
      .article-content__header__post
        = link_to "/articles/new", class: "btn-warning" do
          %button.btn.btn-success{type: "button"} 投稿する
      .article-content__header__list
        = link_to user_path(current_user.id), method: :get do
          %button.btn.btn-primary{type: "button"} マイページ
        = link_to destroy_user_session_path, method: :delete do
          %button.btn.btn-light{type: "button"} ログアウト
  - else
    .article-content__header
      .container 
        = link_to image_tag('Edit Master.png',size: "140x60"), root_path
      .article-content__header__search
        %input.form-control{placeholder: "記事を検索する",type: "text",action: "#",method: :get}
        %span.input-group-btn
          %button.btn.btn-default{type: "submit"}
            %i.glyphicon.glyphicon-search
      .article-content__header__post
        = link_to "/articles/new", class: "btn-warning" do
          %button.btn.btn-success{type: "button"} 投稿する
      .article-content__header__list
        = link_to '/users/sign_up' do
          %button.btn.btn-danger{type: "button"} 新規会員登録
        = link_to '/users/sign_in' do
          %button.btn.btn-primary{type: "button"} ログイン
      